{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "dme",
    "version": "0.1.0",
    "identifier": "com.dme.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "dme",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "fileAssociations": [
            {
                "description": "Markdown",
                "ext": [
                    "md"
                ],
                "role": "Viewer"
            }
        ],
        "linux": {
            "rpm": {
                "desktopTemplate": "./ship/dme.desktop"
            }
        },
        "active": true,
        "targets": "rpm",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/icon.ico"
        ]
    }
}
